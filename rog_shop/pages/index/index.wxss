/**index.wxss**/
.home-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}
.banner{
}
.banner-img{
  width: 100%;
}
.category-nav{
  display: flex;/*流式布局*/
  flex-wrap: wrap;
  background-color: #ffffff;
  padding: 10px 0;
  margin-top: 10rpx;
}
.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}
.nav-img {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 5rpx;
}
.nav-text{
  font-size: 24rpx;
  color:#333333;
}
.goods-list{
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  gap: 10rpx;
}
.goods-item{
  width: calc(50%-5rpx);
  color: #ffffff;
}
.recommend-title{
  padding: 15rpx;
  background-color: #ffffff;
  margin-top: 10rpx;
  border-bottom: 1px solid #eeeeee;

}
.recommend-title text{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}