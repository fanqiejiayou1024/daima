/* pages/user/user.wxss */
.user-page{
  height: 100vh;
  background-color: #f5f5f5;
}
.user-info-container{
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 15rpx;
}
.user-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}
.user-info-right{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;

}
.user-nickname{
  font-size: 32rpx;
  color: #333333;
  font-weight: 300;
}
.edit-icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
}
.function-grid{
  display: flex;
  flex-wrap: wrap;
  background-color: #f5f5f5;
  padding: 20rpx 0;
  margin-bottom: 15rpx;

}
.grid-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}
.grid-icon{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;

}
.grid-text{
  font-size: 24rpx;
  color: #333333;

}
.arrow-icon{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);


}
.order-status-filter{
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 25rpx 0;
}
.filter-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.filter-icom{
  width: 45rpx;
  height: 45rpx;
  margin-bottom: 15rpx;

}
.filter-text{
  color: #666666;
  font-size: 22rpx;
}
